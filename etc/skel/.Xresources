! Xft settings ---------------------------------------------------------------

Xft.antialias:  true
Xft.dpi:        96
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.lcdfilter:  lcddefault
Xft.rgba:       rgb

! Use a nice truetype font and size by defaultfor Xterm
xterm*faceName: DejaVu Sans Mono Book
xterm*faceSize: 9

! xterm scrollback
xterm*savelines: 10000000

! right hand side xterm scrollbar
xterm*rightScrollBar: true
xterm*ScrollBar: true

! stop output to terminal from jumping down to bottom of scroll again
xterm*scrollTtyOutput: false

! xterm color setting
xterm*foreground: rgb:ae/a7/9f
xterm*background: rgb:00/00/00

xterm*color0: rgb:dd/48/14
xterm*color8: rgb:dd/48/14

xterm*colorBDMode: true
xterm*colorBD: rgb:17/93/d1

! xterm geometry setting
xterm*vt100*geometry: 100x24

! xterm word separators
xterm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48
